    </div>
  <% end %>

  <div>
    <%=f.label :username%>
    <%=f.text_field :username%>
  <div>

  <div>
    <%=f.label :password%>
    <%=f.password_field :password%>
  <div>

  <div>
    <%=f.label :email%>
    <%=f.text_field :email%>
  <div>

  <div>
    <%=f.label :phone_number, "Phone Number (Optional)"%>
